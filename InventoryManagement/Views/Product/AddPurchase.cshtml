@model InventoryManagement.Models.PurchaseDto<script src="~/assets/js/jquery-3.6.0.min.js"></script><div class="page-wrapper">    <div class="content">        <div class="page-header">            <div class="page-title">                <h4>Purchase Add</h4>                <h6>Add/Update Purchase</h6>            </div>        </div>        <div class="card">            <div class="card-body">                <div class="row">                    <div class="col-lg-3 col-sm-6 col-12">                        <div class="form-group">                            <label>Supplier Name</label>                            <div class="row">                                <div class="col-lg-10 col-sm-10 col-10">                                    <input type="text" class="form-control" id="SupplierName" asp-for="SuplierName" />                                </div>                            </div>                        </div>                    </div>                    <div class="col-lg-3 col-sm-6 col-12">                        <div class="form-group">                            <label>Bill No</label>                            <div class="row">                                <div class="col-lg-10 col-sm-10 col-10">                                    <input type="text" class="form-control" id="BillNo" asp-for="BillNo" />                                </div>                            </div>                        </div>                    </div>                    <div class="col-lg-3 col-sm-6 col-12">                        <div class="form-group">                            <label>Bill Details</label>                            <div class="row">                                <div class="col-lg-10 col-sm-10 col-10">                                    <input type="text" class="form-control" id="BillDetails" asp-for="BillDeatils" />                                </div>                            </div>                        </div>                    </div>                    <div class="col-lg-3 col-sm-6 col-12">                        <div class="form-group">                            <label>Purchase Date</label>                            <div class="input-groupicon">                                <input type="text" placeholder="DD-MM-YYYY" class="datetimepicker" id="PurchaseDate" asp-for="PurchaseDate" />                                <div class="addonset">                                    <img src="~/assets/img/icons/calendars.svg" alt="img">                                </div>                            </div>                        </div>                    </div>                    <div class="col-lg-3 col-sm-6 col-12">                        <div class="form-group">                            <label>Mobile No.</label>                            <input type="text" id="MobileNo" class="form-control" asp-for="MobileNo" />                        </div>                    </div>                </div>                <div class="row">                    <div class="table-responsive">                        <table class="table" id="purchasedata">                            <thead>                                <tr>                                    <th>Item Name</th>                                    <th>QTY</th>                                    <th>Purchase Price</th>                                    <th>Total Cost</th>                                    <th>Action</th>                                </tr>                            </thead>                            <tbody>                                <tr>                                    <td><input type="text" id="itemname_0" name="itemname_0" class="form-control" /></td>                                    <td><input type="number" id="quantity_0" name="quantity_0" class="form-control" /></td>                                    <td><input type="number" id="purchaseprice_0" name="purchaseprice_0" class="form-control" /></td>                                    <td><input type="number" id="totalcost_0" name="totalcost_0" class="form-control" /></td>                                    <td>                                        <a class="delete-purchase"><img src="~/assets/img/icons/delete.svg" alt="svg"></a>                                        <a href="javascript:void(0);" style="color:green;font-size:20px" onclick="AddTableRow(this)"><i class="fa fa-plus"></i></a>                                    </td>                                </tr>                            </tbody>                        </table>                    </div>                </div>                <div class="row">                    <div class="col-lg-12 float-md-right">                        <div class="total-order">                            <ul>                                <li>                                    <h4>Discount</h4>                                    <h5>$ 0.00</h5>                                </li>                                <li class="total">                                    <h4>Grand Total</h4>                                    <h5>$ 0.00</h5>                                </li>                            </ul>                        </div>                    </div>                </div>                <div class="row">                    <div class="col-lg-12">                        <button class="btn btn-submit me-2" type="button" onclick="SaveData()">Submit</button>                    </div>                </div>            </div>        </div>    </div></div><script>    function AddTableRow(obj) {        var rowcount = $("#purchasedata tbody tr").length;        var newrow = "<tr>";        newrow += "<td><input type='text' id='itemname_" + rowcount + "' name='itemname_" + rowcount + "' class='form-control'/></td>";        newrow += "<td><input type='number' id='quantity_" + rowcount + "' name='quantity_" + rowcount + "' class='form-control'/></td>";        newrow += "<td><input type='number' id='purchaseprice_" + rowcount + "' name='purchaseprice_" + rowcount + "' class='form-control'/></td>";        newrow += "<td><input type='number' id='totalcost_" + rowcount + "' name='totalcost_" + rowcount + "' class='form-control'/></td>";        newrow += "<td><a class='delete-purchase'><img src='/assets/img/icons/delete.svg' alt='svg'></a>";        newrow += "<a href='javascript:void(0);' style='color:green;font-size:20px' onclick='AddTableRow(this)'><i class='fa fa-plus'></i></a></td>";        newrow += '</tr>';        $("#purchasedata tbody").append(newrow);    }    $(document).on("click", ".delete-purchase", function () {        var rowToDelete = $(this).closest("tr");        rowToDelete.remove();        $("#purchasedata tbody tr").each(function (index) {            $(this).find("input").each(function () {                var currentId = $(this).attr("id");                var prefix = currentId.substring(0, currentId.lastIndexOf("_") + 1);                $(this).attr("id", prefix + index);            });        });    });    function SaveData() {        var mainobj = {            SuplierName: $("#SupplierName").val(),            BillNo: $("#BillNo").val(),            BillDeatils: $("#BillDetails").val(),            PurchaseDate: $("#PurchaseDate").val(),            MobileNo: $("#MobileNo").val(),            PurchaseItem: []        };        $("#purchasedata tbody tr").each(function (index) {            var itemName = $(this).find('[id^="itemname_"]').val();            var quantity = $(this).find('[id^="quantity_"]').val();            var purchaseprice = $(this).find('[id^="purchaseprice_"]').val();            var totalcost = $(this).find('[id^="totalcost_"]').val();            mainobj.PurchaseItem.push({                ItemName: itemName,                Quantity: quantity,                PurchasePrice: purchaseprice,                TotalCost: totalcost            });        });        var data = JSON.stringify(mainobj);        $.post("/Product/SavePurchase", { data: data }, function (res) {            if (res != null && res != "") {
                alert(res);                window.location.href = window.location.href;                }                    });            }</script>