@model InventoryManagement.Models.SubCategory

<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Product Add Sub Category</h4>
				<h6>Create new Sub Category</h6>
			</div>
		</div>
		<!-- /add -->
		<form asp-action="AddEditSubcat" asp-controller="Product" method="post" enctype="multipart/form-data">

			<div class="card">

				<div class="card-body">
					<div class="row">

						<div class="col-lg-6 col-sm-6 col-md-6 col-12">
							<div class="form-group">
								<label>Category Name</label>								
								<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
									<option value="0">Select SubCategory</option>
								</select>

							</div>
						</div>
						<div class="col-lg-6 col-sm-6 col-md-6 col-12">
							<div class="form-group">
								<label>SubCategory Name</label>
								<input type="text" asp-for="SubCcategoryName" />

							</div>
						</div>

						<div class="col-lg-12">
							<div class="form-group">
								<label>Description</label>
								<textarea asp-for="SubCcategoryDesc"></textarea>

							</div>
						</div>

						<div class="col-lg-12 col-sm-12">
							<div class="form-group">
								<label>	Sub Cateegory Image</label>
								<div class="image-upload">
									<input type="file" asp-for="SubCcategoryImg">
									<div class="image-uploads">
										<img src="~/assets/img/icons/upload.svg" alt="img">
										<h4>Drag and drop a file to upload</h4>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-12">
							<input type="submit" value="Submit" class="btn btn-submit me-2" />
							
						</div>



					</div>
				</div>
			</div>
			<!-- /add -->
		</form>
	</div>
</div>
<script>

	$(document).ready(function () {
		if ('@ViewBag.msg' != '') { 
		
			alert('@ViewBag.msg')
		}

	})
</script>